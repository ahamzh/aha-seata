<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aha.consumer.moudules.goods.dao.TGoodsDao">

    <resultMap id="BaseResultMap" type="com.aha.consumer.moudules.goods.entity.TGoods">
        <!--@Table t_goods-->
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="goodsName" column="goods_name" jdbcType="VARCHAR"/>
        <result property="goodsPrice" column="goods_price" jdbcType="NUMERIC"/>
        <result property="goodsCount" column="goods_count" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, goods_name, goods_price, goods_count, create_time, update_time
        from aha_seata.t_goods
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, goods_name, goods_price, goods_count, create_time, update_time
        from aha_seata.t_goods
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
          id, goods_name, goods_price, goods_count, create_time, update_time
        from aha_seata.t_goods
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="goodsName != null and goodsName != ''">
                and goods_name = #{goodsName}
            </if>
            <if test="goodsPrice != null">
                and goods_price = #{goodsPrice}
            </if>
            <if test="goodsCount != null">
                and goods_count = #{goodsCount}
            </if>
            <if test="createTime != null">
                and create_time = #{createTime}
            </if>
            <if test="updateTime != null">
                and update_time = #{updateTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
<!--    <insert id="insert" keyProperty="id" useGeneratedKeys="true">-->
<!--        insert into aha_seata.t_goods(goods_name, goods_price, goods_count, create_time, update_time)-->
<!--        values (#{goodsName}, #{goodsPrice}, #{goodsCount}, #{createTime}, #{updateTime})-->
<!--    </insert>-->

    <!--通过主键修改数据-->
    <update id="update">
        update aha_seata.t_goods
        <set>
            <if test="goodsName != null and goodsName != ''">
                goods_name = #{goodsName},
            </if>
            <if test="goodsPrice != null">
                goods_price = #{goodsPrice},
            </if>
            <if test="goodsCount != null">
                goods_count = #{goodsCount},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from aha_seata.t_goods where id = #{id}
    </delete>

</mapper>